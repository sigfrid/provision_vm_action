# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{rb,yml,rake}]
indent_size = 2

[*.{md}]
indent_style = space
charset = utf-8
trim_trailing_whitespace = false

[*.rb]
max_line_length = 120

